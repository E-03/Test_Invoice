@model InvoiceApp.Dto.InvoiceWithDetailDto

@{
    Layout = null;
}

<button type="button" id="InvoiceModal" class="btn btn-primary" data-toggle="modal" data-target="#invoiceModalBackDrop" hidden></button>

<div class="modal fade" id="invoiceModalBackDrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Crear Factura</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="bs-callout">
                    <div class="form-horizontal">
                        <div><strong>Factura Cliente</strong></div>
                        <hr />
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "control-label col-md-12" })
                                    @Html.EditorFor(model => model.CustomerId, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @id = "InvoiceCustomerId" } })
                                </div>
                                <div class="col-md-12">

                                    @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control col-12", @disabled = "disabled", @id = "InvoiceCustomerName" } })
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="mb-2">
                            <h4> Invoice Detail</h4>
                            <span><button class="btn btn-outline-success" id="add_new_detail"> Nuevo Detalle </button></span>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div id="invoice_table">
                                    <table class="table-hover" id="table_detail">
                                        <!--<tr>-->
                                            @*<td><input type="text" id="quantity" class="form-control" placeholder="Cantidad"/></td>
                                        <td><input type="text" id="price" class="form-control" placeholder="Precio"/></td>
                                        <td><input type="button" value="Eliminar" class="btn btn-outline-danger" id="delete_invoice"/></td>*@
                                        <!--</tr>-->
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="invoiceModalClose">Close</button>
                <input type="submit" value="Guardar Factura" id="save_invoice" class="btn btn-outline-success" />
                @*<input type="button" value="Prueba" class="btn btn-outline-success" id="prueba"/>*@
            </div>
        </div>
    </div>
</div>




